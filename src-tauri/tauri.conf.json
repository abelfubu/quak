{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "quak",
  "version": "0.1.0",
  "identifier": "com.quak.app",
  "build": {
    "beforeDevCommand": "deno task start",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "deno task build",
    "frontendDist": "../dist/quak/browser"
  },
  "app": {
    "windows": [
      {
        "title": "Quak",
        "width": 800,
        "height": 800,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "shadow": true,
        "focus": true,
        "alwaysOnTop": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
